<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signUp_img_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:padding="24dp"
    android:scrollbars="none"
    tools:context=".activities.SignUpImgActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:shape="ring"
            android:layout_marginTop="60dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/signIn_ImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/rectangle_7"
            android:paddingTop="15dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/signUp_img_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginBottom="10dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:shape="ring"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:id="@+id/signUp_img_UserAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/textAddImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Thêm ảnh"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:elevation="20dp"
                android:onClick="buttonRotate"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/rotate_icon"
                app:tint="#FEFEFE" />

            <EditText
                android:id="@+id/signUp_img_edtName"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rectangle_6"
                android:ems="10"
                android:hint="Họ và Tên"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textColorHint="#757575"
                android:textSize="15sp" />

            <Button
                android:id="@+id/signUp_img_btnSignUp"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rectangle_1"
                android:text="Đăng ký"
                android:textColor="#74B9FF"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


</ScrollView>