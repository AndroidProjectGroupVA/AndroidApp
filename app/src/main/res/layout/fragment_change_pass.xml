<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_chang_pass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ChangePassFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#74B9FF"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/iv_changpass_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/icon_brackground"
                android:src="@color/input_background" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_changepass_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Tên người dùng"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/null_user_avata" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Đổi mật khẩu"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="center|start"
                android:paddingLeft="20dp"
                android:text="Mật khẩu cũ:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_changepass_old"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingRight="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="center|start"
                android:paddingLeft="20dp"
                android:text="Mật khẩu mới:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_changepass_new"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingRight="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="center|start"
                android:paddingLeft="20dp"
                android:text="Nhập lại mật khẩu:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_changepass_confirm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingRight="20dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_save_changpass"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#74B9FF"
            android:text="Đổi"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:cornerRadius="27.5dp" />

    </LinearLayout>
</LinearLayout>